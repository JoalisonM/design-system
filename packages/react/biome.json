{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["react"]
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": false,
      "all": false
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  }
}
